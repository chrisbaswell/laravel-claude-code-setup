{
  "require": {
    "php": "^8.3",
    "laravel/framework": "^12.7",
    "laravel/tinker": "^2.11",
    "livewire/livewire": "^3.7",
    "livewire/flux": "^2.2",
    "livewire/volt": "^1.0",
    "guzzlehttp/guzzle": "^7.8",
    "spatie/laravel-permission": "^6.13",
    "spatie/laravel-activitylog": "^4.8",
    "spatie/laravel-backup": "^8.2",
    "spatie/laravel-medialibrary": "^11.11",
    "spatie/laravel-query-builder": "^5.5",
    "spatie/laravel-data": "^4.10",
    "spatie/laravel-sluggable": "^3.8",
    "spatie/laravel-settings": "^3.10",
    "firebase/php-jwt": "^6.10",
    "league/oauth1-client": "^1.13",
    "laravel/horizon": "^5.28",
    "predis/predis": "^2.2",
    "sentry/sentry-laravel": "^4.8",
    "spatie/laravel-health": "^1.29"
  },
  "require-dev": {
    "fakerphp/faker": "^1.25",
    "laravel/pint": "^1.14",
    "laravel/sail": "^1.34",
    "mockery/mockery": "^1.7",
    "nunomaduro/collision": "^8.1",
    "pestphp/pest": "^2.34",
    "pestphp/pest-plugin-laravel": "^2.5",
    "pestphp/pest-plugin-livewire": "^2.2",
    "spatie/laravel-ignition": "^2.5",
    "spatie/pest-plugin-test-time": "^2.0",
    "pestphp/pest-plugin-faker": "^2.0",
    "larastan/larastan": "^2.9"
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "pint": "vendor/bin/pint",
    "pint:test": "vendor/bin/pint --test",
    "test": "vendor/bin/pest",
    "test:coverage": "vendor/bin/pest --coverage",
    "test:parallel": "vendor/bin/pest --parallel"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  }
}